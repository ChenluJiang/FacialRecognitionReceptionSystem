<BorderPane prefHeight="517.0" prefWidth="546.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FXController">
   <top>
		<VBox>
   <children>
   			<HBox alignment="CENTER" spacing="10">
   				<padding>
   					<Insets bottom="10" top="10" />
   				</padding>
   			</HBox>
   			<Separator />
   </children>
		</VBox>
	</top>
	<center>
		<VBox alignment="CENTER">
			<padding>
				<Insets left="10" right="10" />
			</padding>
   <children>
   			<ImageView fx:id="currentFrame" />
   </children>
		</VBox>
	</center>
	<bottom>
		<HBox alignment="CENTER">
			<padding>
				<Insets bottom="25" left="25" right="25" top="25" />
			</padding>
   <children>
   			<Button fx:id="start_btn" alignment="center" disable="false" onAction="#startCamera" text="Start camera" />
            <Label fx:id="lblDisplay" prefHeight="27.0" prefWidth="172.0">
               <HBox.margin>
                  <Insets left="30.0" right="30.0" />
               </HBox.margin></Label>
            <Button fx:id="btConfirm" mnemonicParsing="false" onAction="#btConfirmHandle" text="Confirm" />
   </children>
		</HBox>
	</bottom>
</BorderPane>
